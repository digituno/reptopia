{% load static %}
<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- 위 3개의 메타 태그는 *반드시* head 태그의 처음에 와야합니다; 어떤 다른 콘텐츠들은 반드시 이 태그들 *다음에* 와야 합니다 -->
    <title>REPTOPIA</title>
    <!-- 부트스트랩 -->
    <link href="{% static 'lib/bootstrap/css/bootstrap.min.css' %}" rel="stylesheet">
    <!-- fontawesome -->
    <link href="{% static 'lib/fontawesome/css/all.min.css' %} " rel="stylesheet">
    <!-- nav static bar -->
    <link href="{% static 'css/navbar-static-top.css' %}" rel="stylesheet">
    {% block stylesheet %}
    {% endblock %}
  </head>
  <body>
    <!-- Fixed navbar -->
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
            <a class="navbar-brand" href="{%url 'index' %}">REPTOPIA</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <!--
            <li class="active"><a href="#">Home</a></li>
            <li><a href="#about">About</a></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Dropdown <span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li><a href="#">Action</a></li>
                <li><a href="#">Another action</a></li>
                <li><a href="#">Something else here</a></li>
                <li class="divider"></li>
                <li class="dropdown-header">Nav header</li>
                <li><a href="#">Separated link</a></li>
                <li><a href="#">One more separated link</a></li>
              </ul>
            </li>
            -->
            {% if user.is_authenticated %}
              {% if user.is_staff %}
              <li><a href="{% url 'notice-list' %}">Notice</a></li>
              {% endif %}
              <li><a href="{% url 'pet-list' userid=user.pk %}">Reptile</a></li>
            {% endif %}
          </ul>
            <div id="navbar" class="collapse navbar-collapse">
              <ul class="nav navbar-nav navbar-right">
                {% if user.is_authenticated %}
                <li><a href="#"><i class="fa fa-user"></i> {{ user.name }}</a></li>
                <li><a class="logout" href="{% url 'logout' %}">로그아웃</a></li>
                {% else %}
                  <li><a class="login" href="{% url 'login' %}">로그인</a></li>
                  <li><a class="login" href="{% url 'signup' %}">회원가입</a></li>
                {% endif %}
              </ul>
            </div>
        </div>
      </div>
    </nav>

    <!-- Begin page content -->
    {% block content %}
    {% endblock %}

    <div aria-hidden="true" role="dialog" tabindex="-1" id="pop_msg" class="modal fade">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header" id="pop_msg_panel">
                    <h4 class="modal-title" id="pop_msg_title">&nbsp;</h4>
                </div>
                <div class="modal-body" id="pop_msg_body">
                    &nbsp;
                </div>
                <div class="modal-footer">
                    <button id="btn_confirm" type="button" class="btn btn-default" data-dismiss="modal">확인</button>
                    <button type="button" class="btn btn-warning" data-dismiss="modal">닫기</button>
                </div>
            </div>
        </div>
    </div>

    <footer class="footer">
      <div class="container">
        <p class="text-muted">
            Reptopia developed by digituno. Since 2020.
        </p>
      </div>
    </footer>

    <!-- jQuery (부트스트랩의 자바스크립트 플러그인을 위해 필요합니다) -->
    <script src="{% static 'lib/jquery/jquery.min.js' %}"></script>
    <!-- 모든 컴파일된 플러그인을 포함합니다 (아래), 원하지 않는다면 필요한 각각의 파일을 포함하세요 -->
    <script src="{% static 'lib/bootstrap/js/bootstrap.min.js' %}"></script>
    <script>
        var _MSG_SUCC_ = 'success';
        var _MSG_WARNING_ = 'warning';
        var _MSG_ERROR_ = 'error';
        var _MSG_CONFIRM_ = 'confirm';
        function call_pop_message(type, title, content) {
            $('#pop_msg_panel').removeClass();
            $('#btn_confirm').hide();
            if (type == _MSG_SUCC_) {
                $('#pop_msg_panel').addClass('modal-header bg-success text-white');
            } else if (type == _MSG_WARNING_) {
                $('#pop_msg_panel').addClass('modal-header bg-warning text-dark');
            } else if (type == _MSG_ERROR_) {
                $('#pop_msg_panel').addClass('modal-header bg-danger text-white');
            } else {
                $('#btn_confirm').show();
                $('#pop_msg_panel').addClass('modal-header bg-dark text-white');
            }
            $('#pop_msg_title').text(title);
            $('#pop_msg_body').text(content);

            $('#pop_msg').modal('show')
        }
    </script>
    {% block script_content %}
    {% endblock %}
  </body>
</html>
