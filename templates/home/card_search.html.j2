{% extends 'base.html.j2' %}
{% load static %}
{% block stylesheet %}
<style>
    .profile-header-img {
        padding: 10px;
    }

    .profile-header-img > a > img.rounded-circle {
        width: 100px;
        height: 100px;
        border: 2px solid #51D2B7;
    }

    .profile-header {
        margin-top: 10px;
    }

    /**
     * Ranking component
     */
    .rank-label-container {
        margin-top: -19px;
        /* z-index: 1000; */
        text-align: center;
    }

    .label.label-default.rank-label {
        background-color: rgb(81, 210, 183);
        padding: 5px 10px 5px 10px;
        border-radius: 27px;
    }
</style>
{% endblock %}

{% block content %}
<div class="container">
<!-- start container -->
    <div class="clearfix">
        <h1 class="float-left">카드 검색 결과</h1>
    </div>
    <hr>
    <div class="row">
        {% for user in user_list %}
            <div class="profile-header-img">
                <a href="{{ user.get_absolute_url }}">
                {% if user.image %}
                    <img src="{{ user.image.url }}" class="rounded-circle">
                {% else %}
                    <img src="{% static "img/anonymous_user.png" %}" class="rounded-circle">
                {% endif %}
                </a>
                <div class="rank-label-container">
                    <span class="label label-default rank-label">{{ user.name }}</span>
                </div>
            </div>
        {% endfor %}
    </div>
    {% if user_list.paginator.num_pages > 0 %}
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                {% if user_list.has_previous %}
                <li class="page-item"> <a class="page-link" href="?page={{ user_list.previous_page_number }}">&laquo;</a> </li>
                {% else %}
                <li class="page-item disabled"> <span class="page-link">&laquo;</span> </li>
                {% endif %}
                {% for i in user_list.paginator.page_range %}
                    {% if user_list.number == i %}
                        <li class="page-item active"><span class="page-link">{{ i }} <span class="sr-only">(current)</span></span></li>
                    {% else %}
                        <li class="page-item"><a class="page-link" href="?page={{ i }}">{{ i }}</a></li>
                    {% endif %}
                {% endfor %}
                {% if user_list.has_next %}
                    <li class="page-item"><a class="page-link" href="?page={{ user_list.next_page_number }}">&raquo;</a></li>
                {% else %}
                    <li class="page-item disabled"> <span class="page-link">&raquo;</span></li>
                {% endif %}
            </ul>
        </nav>
    {% endif %}

</div>
{% endblock %}
