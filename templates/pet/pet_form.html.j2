{% extends 'base.html.j2' %}

{% block stylesheet %}
  <style type="text/css">
    .btn-file {
        position: relative;
        overflow: hidden;
    }
    .btn-file input[type=file] {
        position: absolute;
        top: 0;
        right: 0;
        min-width: 100%;
        min-height: 100%;
        font-size: 100px;
        text-align: right;
        filter: alpha(opacity=0);
        opacity: 0;
        outline: none;
        background: white;
        cursor: inherit;
        display: block;
    }

    #img-upload{
        width: 100%;
    }
  </style>
{% endblock %}

{% block content %}
  <!-- Begin page content -->
  <div class="container">
    <div class="page-header">
       <h1>펫 등록하기</h1>
    </div>
    <form method="post" action="" class="form-horizontal" enctype="multipart/form-data">
      {% csrf_token %}
      <input type="hidden" name="next" value="" />
      {% for field in form %}
        {% if field.id_for_label != 'id_image' %}
        <div class="form-group">
          <label for="cname" class="col-sm-2 control-label">{{ field.label_tag }}</label>
          <div class="col-sm-10">
            {% if field.errors %}
                <div class="alert alert-danger alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    {{ field.errors }}
                </div>
            {% endif %}
            {{ field }}
            <br />
            {{ field.help_text }}
          </div>
        </div>
        {% else %}
          <div class="form-group">
              <label for="cname" class="col-sm-2 control-label">{{ field.label_tag }}</label>
              <div class="col-sm-10">
                <div class="input-group">
                    <span class="input-group-btn">
                        <span class="btn btn-default btn-file">
                          파일선택<input type="file" id="imgInp">
                        </span>
                    </span>
                    <input type="text" class="form-control" readonly>
                </div>
                <img id='img-upload'/>
              </div>
          </div>
        {% endif %}
      {% endfor %}
      <div class="form-group last">
        <div class="col-lg-offset-2 col-lg-10">
            <button type="submit" class="btn btn-primary">등록하기</button>
            <a href="#">
                <button type="button" class="btn btn-warning">돌아가기</button>
            </a>
        </div>
      </div>
    </form>
  </div>
{% endblock %}


{% block script_content %}
  <script>
    $(document).ready( function() {
      	$(document).on('change', '.btn-file :file', function() {
  		var input = $(this),
  			label = input.val().replace(/\\/g, '/').replace(/.*\//, '');
  		input.trigger('fileselect', [label]);
  		});

  		$('.btn-file :file').on('fileselect', function(event, label) {

  		    var input = $(this).parents('.input-group').find(':text'),
  		        log = label;

  		    if( input.length ) {
  		        input.val(log);
  		    } else {
  		        if( log ) alert(log);
  		    }

  		});
  		function readURL(input) {
  		    if (input.files && input.files[0]) {
  		        var reader = new FileReader();

  		        reader.onload = function (e) {
  		            $('#img-upload').attr('src', e.target.result);
                  $('#img-upload').attr('class', 'img-thumbnail');
  		        }

  		        reader.readAsDataURL(input.files[0]);
  	 	    } else {
            $('#img-upload').attr('src', '');
            $('#img-upload').removeClass('img-thumbnail');
          }
  		}

  		$("#imgInp").change(function(){
  		    readURL(this);
  		});
  	});
  </script>
{% endblock%}
