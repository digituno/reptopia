{% extends 'base.html.j2' %}
{% load static %}

{% block content %}
<!-- Begin page content -->
<div class="container">
    <div class="page-header">
        <div class="pull-right">
            <div class="btn-group" role="group" aria-label="Basic example">
                {% if user.is_authenticated %}
                    <a href="{% url 'account-update' pk=user.pk %}">
                        <button type="button" class="btn btn-default">정보수정</button>
                    </a>
                {% endif %}
                <a href="{% url 'index' %}">
                    <button type="button" class="btn btn-default">돌아가기</button>
                </a>
            </div>
        </div>
        <h1>Account detail</h1>
    </div>
    <div class="row">
        <div class="col-sm-2">
            {% if user.image %}
            <img src="{{ user.image.url }}" class="img-circle" width="150" height="150"> </div>
            {% endif %}
        <div class="col-sm-10">
            <h5> {{ user.name}} ( {{ user.email }} ) </h5>
            <hr />
            <pre class="well">{{ user.bio }}</pre>
        </div>
    </div>
</div>
{% endblock %}
