{% extends 'base.html.j2' %}
{% load static %}

{% block stylesheet %}
    <link rel="stylesheet" type="text/css" href="{% static 'lib/magnific-popup/css/magnific-popup.css' %}" />
{% endblock %}

{% block content %}
<!-- Begin page content -->
<div class="container">
    <div class="clearfix">
        <h1 class="float-left">사용자 정보</h1>
        <div class="float-right">
            <div class="btn-group" role="group">
                {% if account == user %}
                    <a href="{% url 'account-update' pk=account.pk %}">
                        <button type="button" class="btn btn-default">정보수정</button>
                    </a>
                {% endif %}
                <button type="button" class="btn btn-default" onclick="history.go(-1)">돌아가기</button>
            </div>
        </div>
    </div>
    <hr>
   <div class="row">
        <div class="col-2">
            {% if account.image %}
            <img src="{{ account.image.url }}" class="img-circle" width="150" height="150">
            {% else %}
            <img src="{% static "img/anonymous_user.png" %}" class="img-circle" width="150" height="150">
            {% endif %}
         </div>
        <div class="col-10">
            <h5> {{ account.name}} </h5>
            <br/>
            <pre>{{ account.bio | default_if_none:"" }}</pre>
        </div>
    </div>
    <div class="row">
        <div class="col-2" style="text-align:center;">
            <span class="btn" data-id="{{ account.pk }}" data-type="account" data-action="like" title="Like">
                {% if likedprofileuser is None %}
                    <i class="fa fa-heart"></i>
                {% else %}
                    <i class="far fa-heart"></i>
                {% endif %}
                <span data-count="like">{{ account.likes.likes.count }}</span>
            </span>
            <!--
            <li data-id="{{ account.pk }}" data-type="account" data-action="dislike" title="Dislike">
                <span class="glyphicon glyphicon-thumbs-down"></span>
                <span data-count="dislike">{{ account.likes.dislikes.count }}</span>
            </li>
            -->
        </div>
    </div>
    <hr>
    <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="nav-item"><a class="nav-link active" href="#pet_list" data-toggle="tab" >개체목록</a></li>
        <li role="presentation" class="nav-item"><a class="nav-link" href="#like_list" data-toggle="tab" >좋아요</a></li>
    </ul>
    <div class="tab-content mt-3">
        <div id="pet_list" class="tab-pane active">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col" class="d-none d-sm-table-cell">#</th>
                            <th scope="col">펫이름</th>
                            <th scope="col" class="d-none d-sm-table-cell">성별</th>
                            <th scope="col">종이름</th>
                            <th scope="col" class="d-none d-sm-table-cell">펫사진</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for pet in pet_list %}
                            <tr>
                                <th class="d-none d-sm-table-cell" scope="row">{{ forloop.counter }}</th>
                                <td><a href="{{ pet.get_absolute_url }}">{{ pet.name}}</a></td>
                                <td class="d-none d-sm-table-cell">{{ pet.gender.item_name }}</td>
                                <td>{{ pet.species.common_name_kor}}</td>
                                <td class="d-none d-sm-table-cell">
                                    {% if pet.image %}
                                        <a class="image-popup-no-margins" href="{{ pet.image.url }}"><img src="{{ pet.image.url }}" width="75" height="75"></a>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            {% if pet_list.paginator.num_pages > 0 %}
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        {% if pet_list.has_previous %}
                        <li class="page-item"> <a class="page-link" href="?page={{ pet_list.previous_page_number }}">&laquo;</a> </li>
                        {% else %}
                        <li class="page-item disabled"> <span class="page-link">&laquo;</span> </li>
                        {% endif %}
                        {% for i in pet_list.paginator.page_range %}
                            {% if pet_list.number == i %}
                                <li class="page-item active"><span class="page-link">{{ i }} <span class="sr-only">(current)</span></span></li>
                            {% else %}
                                <li class="page-item"><a class="page-link" href="?page={{ i }}">{{ i }}</a></li>
                            {% endif %}
                        {% endfor %}
                        {% if pet_list.has_next %}
                            <li class="page-item"><a class="page-link" href="?page={{ pet_list.next_page_number }}">&raquo;</a></li>
                        {% else %}
                            <li class="page-item disabled"> <span class="page-link">&raquo;</span></li>
                        {% endif %}
                    </ul>
                </nav>
            {% endif %}
        </div>
        <div id="like_list" class="tab-pane">
            > {{ account.name }} 님을 좋아하는 사용자들
            <div class="row container">
                {% for liked in account.likes.likes %}
                    {% if liked.user.image %}
                        <img src="{{ liked.user.image.url }}" class="img-circle" width="20" height="20" title="{{ liked.user.name }}">
                    {% else %}
                        <img src="{% static "img/anonymous_user.png" %}" class="img-circle" width="20" height="20" title="{{ liked.user.name }}">
                    {% endif %}
                {% endfor %}
            </div>
            <hr>
            > {{ account.name }} 님이 좋아하는 사용자들
            <div class="row container">
                {% for like in userlike %}
                    {% if like.user.image %}
                        <img src="{{ like.user.image.url }}" class="img-circle" width="20" height="20" title="{{ like.user.name }}">
                    {% else %}
                        <img src="{% static "img/anonymous_user.png" %}" class="img-circle" width="20" height="20" title="{{ like.user.name }}">
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block script_content %}
<script src="{% static 'lib/magnific-popup/jquery.magnific-popup.js' %}"></script>
<script>
    function like()
    {
        var like = $(this);
        var type = like.data('type');
        var pk = like.data('id');
        var action = like.data('action');
        var dislike = like.next();

        $.ajax({
            url : "/" + action + "/" + type + "/" + pk,
            //type : 'POST',
            data : { 'obj' : pk },

            success : function (json) {
                like.find("[data-count='like']").text(json.like_count);
                dislike.find("[data-count='dislike']").text(json.dislike_count);
            }
        });

        return false;
    }

    function dislike()
    {
        var dislike = $(this);
        var type = dislike.data('type');
        var pk = dislike.data('id');
        var action = dislike.data('action');
        var like = dislike.prev();

        $.ajax({
            url : "/" + action + "/" + type + "/" + pk,
            //type : 'POST',
            data : { 'obj' : pk },

            success : function (json) {
                dislike.find("[data-count='dislike']").text(json.dislike_count);
                like.find("[data-count='like']").text(json.like_count);
            }
        });

        return false;
    }

    // Connecting Handlers
    $(function() {
        {% if user.is_authenticated and user != account %}
            $('[data-action="like"]').click(like);
            /*$('[data-action="dislike"]').click(dislike);*/
        {% endif %}
    });

    $(document).ready(function() {
        $('.image-popup-no-margins').magnificPopup({
            type: 'image',
            closeOnContentClick: true,
            closeBtnInside: false,
            fixedContentPos: true,
            mainClass: 'mfp-no-margins mfp-with-zoom', // class to remove default margin from left and right side
            image: {
                verticalFit: true
            },
            zoom: {
                enabled: true,
                duration: 300 // don't foget to change the duration also in CSS
            }
        });
    });
</script>
{% endblock %}
